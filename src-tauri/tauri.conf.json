{
  "productName": "Mosaic Generator",
  "version": "0.1.0",
  "identifier": "com.mosaic.gui",
  "build": {
    "beforeDevCommand": "npm run vite",
    "beforeBuildCommand": "npm run vite:build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Mosaic Generator",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data:; style-src 'self' 'unsafe-inline'; script-src 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": ["$TMPDIR/**/*", "$HOME/**/*", "**"]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capabilities",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:allow-open",
            "fs:allow-read-file",
            "fs:allow-write-file",
            "fs:allow-read-dir",
            "fs:scope-temp",
            "shell:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
